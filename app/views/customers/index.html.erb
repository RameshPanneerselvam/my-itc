<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Warehouse</th>
      <th>Land Line</th>
      <th>Extension</th>
      <th>Alternative_email</th>
      <th>Mobile Number1</th>
      <th>Mobile Number2</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_name %></td>
        <td><%= customer.warehouse_id %></td>
        <td><%= customer.contact[0].landline %></td>
        <td><%= customer.contact[0].extension %></td>
        <td><%= customer.contact[0].alternative_email %></td>
        <td><%= customer.contact[0].mobilenumber1 %></td>
        <td><%= customer.contact[0].mobilenumber2 %></td>
        <td><%= customer.address[0].address1 %></td>
        <td><%= customer.address[0].address2 %></td>
        <td><%= customer.address[0].city %></td>
        <td><%= customer.address[0].state %></td>
        <td><%= customer.address[0].country %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

